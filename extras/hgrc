[ui]
# Name data to appear in commits
username = Ryan C. Scott <ryan@5pmCasual.com>
ssh = ssh -2 -C
merge = emacs

[extensions]
record =
shelve = 
graphlog =
color =
purge =
strip =

[merge-tools]
emacs.args = -q --load ~/ryscomacs/ediff-setup.el --eval "(ediff-merge-with-ancestor \""$local"\" \""$other"\" \""$base"\" nil \""$output"\")"
vimdiff.args = -f -d $output -M $local $base $other -c "wincmd J" -c "set modifiable" -c "set write"
vimdiff.premerge = keep

[alias]
cdiff = diff --color=always
cstat = stat --color=always
cglog = glog --color=always
clog = log --color=always

slog = log --style=$HOME/ryscomacs/extras/mercurial/map-cmdline.slog
sglog = log --style=$HOME/ryscomacs/extras/mercurial/map-cmdline.sglog

force-merge-other = merge --tool internal:other
force-merge-mine = merge --tool internal:local

[color]
status.modified = cyan bold
status.added = green bold
status.removed = yellow bold
status.deleted = red bold
status.unknown = magenta bold
status.ignored = black bold

diff.diffline = bold
diff.extended = magenta bold
diff.file_a = green bold
diff.file_b = green bold
diff.hunk = magenta
diff.deleted = yellow
diff.inserted = cyan
diff.changed = white
diff.trailingwhitespace = bold white_background
